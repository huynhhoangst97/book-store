include ../layouts/header.pug
nav(class="navbar navbar-expand-lg navbar-light bg-light")
    a(class="navbar-brand" href="../user") Dashboard
    a(class="navbar" href="../user/create") Create
br

div(class="container-sm" style="padding: 100px")
    h1 Login
    br
    if errors
        each error in errors
            .alert.alert-danger.fade.show= error
                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                    span(aria-hidden="true") &times;
    form(method="post" action="/auth/login")
            div(class="form-group")
                label(for="email") Email
                input(type="email" class="form-control" name="email" required)

            div(class="form-group")
                label(for="password") Password
                if values
                    input(type="password" class="form-control" name="password" required values=values.email)
                else
                    input(type="password" class="form-control" name="password" required)

            button.btn.btn-primary(type='submit') Login